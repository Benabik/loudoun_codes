<%= simple_form_for [:admin, @problem] do |form| %>
  <div class="form-controls">
    <%= form.input :name %>
    <%= form.input :description, type: :text %>
    <%= form.association(:attachments,
                         as: :file,
                         label: 'Handout',
                         input_html: { name: 'problem[handout]' }) %>

    <%= form.association(:attachments,
                         as: :file,
                         label: 'Sample Input',
                         input_html: { name: 'problem[sample_in]' }) %>

    <%= form.association(:attachments,
                         as: :file,
                         label: 'Sample Output',
                         input_html: { name: 'problem[sample_out]' }) %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
